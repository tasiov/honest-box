<div class="logo">
</div>
<div class="login">
	<% if @current_user %>

		Hey, <%= @current_user.name %>, you're already logged in! <%= link_to "Logout!", logout_path %>

	<% else %>

		<%= form_tag "/login" do %>
			name: <%= text_field_tag :name %>
			email: <%= text_field_tag :email %>
			<%= submit_tag "Log In" %>
		<% end %>

	<div class="newuser">
		<%= link_to "New to HonestBox? Sign Up!", new_path %>
	</div>

<% end %>
</div>